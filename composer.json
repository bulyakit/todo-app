{
  "name": "bulyakit/to-do",
  "description": "A small experiment Slim Framework application",
  "homepage": "https://github.com/bulyakit/to-do",
  "license": "MIT",
  "authors": [
    {
      "name": "Tamas Bulyaki",
      "email": "bulyakit@gmail.com"
    }
  ],

  "require": {
    "guzzlehttp/guzzle": "^6.3",
    "psr/log": "^1.0",
    "slim/slim": "^3.0",
    "ext-json": "*"
  },

  "require-dev": {
    "phpmd/phpmd": "^2.7",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.0"
  },

  "autoload": {
    "psr-4": {
      "App\\": "./"
    }
  },

  "scripts": {
    "code-sniffer": "phpcs -p --standard=PSR12 src",
    "phpunit": "phpunit -c phpunit.xml"
  }
}
